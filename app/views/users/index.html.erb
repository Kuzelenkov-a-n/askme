<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Наши пользователи</h1>
  </div>
  <% @users.each do |user| %>
    <div class="users-list-item">
      <div class="user-image-div user-image-div-small">
        <%= link_to image_tag(user_avatar(user), class: 'user-image'), user_path(user) %>
      </div>
    </div>
  <% end %>
</div>

<div class="user-hashtags text-center">
  <h1 class="title-small">Хэштеги</h1>
  <% @hashtags.each do |hashtag| %>
    <div class="button button-hashtag">
      <%= render partial: 'hashtags/hashtag', object: hashtag %>
    </div>
  <% end %>
</div>
